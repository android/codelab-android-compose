{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:all",
    ":dependencyDashboard",
    "schedule:daily"
  ],
  "baseBranchPatterns": [
    "main",
    "end"
  ],
  "packageRules": [
    {
      "groupName": "Kotlin Dependencies",
      "matchDatasources": [
        "maven"
      ],
      "registryUrls": [
        "https://dl.google.com/dl/android/maven2/",
        "https://repo.maven.apache.org/maven2/"
      ],
      "matchPackageNames": [
        "org.jetbrains.kotlin{/,}**",
        "androidx.compose.compiler{/,}**"
      ]
    }
  ]
}
